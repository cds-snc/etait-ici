{
  "name": "etait-ici",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "dev": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "start": "NODE_ENV=production node build/server.js",
    "heroku-postbuild": "yarn run build",
    "minikube": "kustomize build manifests/overlays/minikube | kubectl apply -f -",
    "delete-minikube": "kustomize build manifests/overlays/minikube | kubectl delete -f -",
    "traefik": "minikube service --namespace=kube-system traefik-ingress-service"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cds-snc/etait-ici.git"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=true npm test && lint-staged",
      "pre-push": "CI=true npm test"
    }
  },
  "dependencies": {
    "express": "^4.16.4",
    "razzle": "^2.4.1",
    "razzle-heroku": "^3.0.0",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-router-dom": "^4.3.1"
  },
  "devDependencies": {
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^3.6.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.3",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.3.1",
    "jest-dom": "^2.1.1",
    "lint-staged": "^8.0.5",
    "prettier": "^1.15.2",
    "react-testing-library": "^5.2.3"
  }
}
